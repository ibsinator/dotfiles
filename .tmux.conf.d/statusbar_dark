# -----------------------------------------------------------------------------
# INTERFACE SETTINGS FOR DARK TMUX --------------------------------------------
# -----------------------------------------------------------------------------

# Status bar ------------------------------------------------------------------
set -g status-bg colour238                  # Background color for status bar.
set -g status-fg colour254                  # Text color for status bar.
set -g message-bg colour238                 # Background color for message bar.
set -g message-fg colour214                 # Text color for message bar.

set -g status-right ' %H:%M  #(~/bin/tmux/right_status)'

# Windows ---------------------------------------------------------------------
set -g window-style 'bg=colour0'
set -g window-active-style 'bg=colour0'

# Panes -----------------------------------------------------------------------
set -g pane-border-fg colour8               # Border color for inactive pane.
set -g pane-border-bg colour8               # Border color for inactive pane.
set -g pane-active-border-fg colour238      # Border color for active pane.
set -g pane-active-border-bg colour238      # Border color for active pane.
